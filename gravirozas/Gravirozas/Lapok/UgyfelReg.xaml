<Page x:Class="Gravirozas.Lapok.UgyfelReg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gravirozas.Lapok"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UgyfelReg">

    <Grid Background="White">
        <Label Content="Ügyfél neve:" HorizontalAlignment="Left" Margin="277,176,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UgyfelTB" HorizontalAlignment="Left" Margin="400,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Cím:" HorizontalAlignment="Left" Margin="319,207,0,0" VerticalAlignment="Top"/>
        <Label Content="Telefonszám:" HorizontalAlignment="Left" Margin="274,238,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CimTB" HorizontalAlignment="Left" Margin="400,211,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TelefonTB" HorizontalAlignment="Left" Margin="400,246,0,0" Text="+36" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Regisztral" Content="Regisztrál" HorizontalAlignment="Left" Margin="351,323,0,0" VerticalAlignment="Top" Height="29" Width="70" Click="Regisztral_Click"/>

    </Grid>
</Page>
