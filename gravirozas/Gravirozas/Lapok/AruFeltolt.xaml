      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gravirozas.Lapok"
      mc:Ignorable="d"
      Title="AruFeltolt" Height="600" Width="900">

    <Grid Margin="0,0,0,0">
        <Grid Margin="150,0,150,300" HorizontalAlignment="Center" Width="600">
            <Image x:Name="Kep"  Margin="10,10,10,0" VerticalAlignment="Top"  />
        </Grid>
        <Grid HorizontalAlignment="Center" Margin="225,305,225,0">
            <Button x:Name="feltoltB" Content="Feltölt" HorizontalAlignment="Center" VerticalAlignment="Top" Height="48" Width="114" Click="feltoltB_Click" Background="#FF3246C1" BorderBrush="#FF3146C3" Margin="126,240,110,0" />
            <ComboBox x:Name="arunevCB" Text="Termék választása" HorizontalAlignment="Center" Margin="-12,23,0,0" VerticalAlignment="Top" Height="39" SelectionChanged="ArunevCB_SelectionChanged"/>
            <TextBox x:Name="mennyisegTB" HorizontalAlignment="Left" Margin="176,157,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Ennyi darab van:" HorizontalAlignment="Left" Margin="54,157,0,0" VerticalAlignment="Top"/>
        </Grid>


    </Grid>
</Page>
